<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="modulepkg.tib.Miraz_2222649.researchOfficer.researchSurveyController">
    <children>
        <Text fill="#eb0c0c" layoutX="163.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Research  Survey">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Text>

        <Button fx:id="backButton" layoutX="32.0" layoutY="12.0" mnemonicParsing="false" text="Back" onAction="#handleBack"/>

        <TextField fx:id="surveyTitleField" layoutX="153.0" layoutY="58.0" prefHeight="26.0" prefWidth="272.0" promptText="Write survey title"/>
        <TextField fx:id="sectorField" layoutX="75.0" layoutY="95.0" promptText="Write Sector"/>
        <TextField fx:id="regionField" layoutX="310.0" layoutY="96.0" promptText="Write Region"/>

        <TextField fx:id="question1Field" layoutX="75.0" layoutY="137.0" promptText="Write Question : 1"/>
        <TextField fx:id="question2Field" layoutX="310.0" layoutY="137.0" promptText="Write Question : 2"/>

        <!-- Choices for Question 1 -->
        <TextField fx:id="q1Choice1Field" layoutX="75.0" layoutY="179.0" promptText="Choice 1 for Q1"/>
        <TextField fx:id="q1Choice2Field" layoutX="75.0" layoutY="221.0" promptText="Choice 2 for Q1"/>
        <TextField fx:id="q1Choice3Field" layoutX="75.0" layoutY="263.0" promptText="Choice 3 for Q1"/>
        <TextField fx:id="q1Choice4Field" layoutX="75.0" layoutY="301.0" promptText="Choice 4 for Q1"/>

        <!-- Choices for Question 2 -->
        <TextField fx:id="q2Choice1Field" layoutX="311.0" layoutY="179.0" promptText="Choice 1 for Q2"/>
        <TextField fx:id="q2Choice2Field" layoutX="311.0" layoutY="221.0" promptText="Choice 2 for Q2"/>
        <TextField fx:id="q2Choice3Field" layoutX="311.0" layoutY="263.0" promptText="Choice 3 for Q2"/>
        <TextField fx:id="q2Choice4Field" layoutX="311.0" layoutY="301.0" promptText="Choice 4 for Q2"/>

        <Button fx:id="publishButton" layoutX="192.0" layoutY="343.0" mnemonicParsing="false"
                prefHeight="26.0" prefWidth="160.0" text="Publish" onAction="#handlePublish"/>
    </children>
</AnchorPane>
