<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="modulepkg.tib.Miraz_2222649.policyAnalyst.suggestResearchTopicController">
    <children>
        <Button fx:id="backButton" layoutX="15.0" layoutY="11.0" mnemonicParsing="false"
                prefHeight="35.0" prefWidth="64.0" text="Back" onAction="#handleBack"/>

        <Text fill="#f50000" layoutX="147.0" layoutY="39.0" strokeType="OUTSIDE"
              strokeWidth="0.0" text="Suggest Research Topic">
            <font>
                <Font name="System Bold" size="30.0"/>
            </font>
        </Text>

        <TextField fx:id="topicNumberField" layoutX="47.0" layoutY="92.0" promptText="Enter number of topic"/>
        <TextField fx:id="topicField" layoutX="301.0" layoutY="93.0" promptText="Research topic"/>
        <TextField fx:id="detailsField" layoutX="47.0" layoutY="135.0" promptText="Add details"/>

        <Button fx:id="submitButton" layoutX="300.0" layoutY="136.0" mnemonicParsing="false"
                prefHeight="26.0" prefWidth="160.0" text="Submit" onAction="#handleSubmit"/>

        <TableView fx:id="topicTable" layoutX="12.0" layoutY="186.0" prefHeight="206.0" prefWidth="575.0">
            <columns>
                <TableColumn fx:id="numberCol" prefWidth="135.0" text="Enter number of topic"/>
                <TableColumn fx:id="topicCol" prefWidth="246.0" text="Research topic"/>
                <TableColumn fx:id="detailsCol" prefWidth="193.0" text="Details"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
